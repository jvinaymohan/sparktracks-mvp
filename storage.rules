rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile photos - users can upload/delete their own
    match /profile_photos/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can view profiles
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Class images - coaches can upload for their classes
    match /class_images/{classId}/{allPaths=**} {
      allow read: if true; // Anyone can view class images
      allow write: if request.auth != null; // Any authenticated user (will check ownership in app)
      allow delete: if request.auth != null;
    }
    
    // Gallery photos - users can upload to their gallery
    match /gallery_photos/{userId}/{allPaths=**} {
      allow read: if true; // Public galleries
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
