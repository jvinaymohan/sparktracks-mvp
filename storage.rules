rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImageUpload() {
      return request.resource.size < 5 * 1024 * 1024 && // Max 5MB
             request.resource.contentType.matches('image/.*'); // Images only
    }
    
    // User profile images
    match /users/{userId}/profile/{imageId} {
      allow read: if isAuthenticated(); // All users can view profile images
      allow write: if isAuthenticated() && isOwner(userId) && isValidImageUpload();
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Task completion images
    match /tasks/{taskId}/images/{imageId} {
      allow read: if isAuthenticated(); // All users can view task images
      allow write: if isAuthenticated() && isValidImageUpload();
      allow delete: if isAuthenticated();
    }
    
    // Class images (thumbnails, banners)
    match /classes/{classId}/images/{imageId} {
      allow read: if true; // Public classes might be browsable
      allow write: if isAuthenticated() && isValidImageUpload();
      allow delete: if isAuthenticated();
    }
    
    // Achievement badges/images
    match /achievements/{achievementId}/{imageId} {
      allow read: if isAuthenticated();
      allow write, delete: if false; // System-managed only
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

